<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors' %>
      <%= form_with model: @article, class: "shadow p-3 mb-3 bg-info rounded", local: true do |form| %>
        <div class="mb-3 row">
          <%= form.label :title, class: "form-label col-2 text-white" %>
          <div class="col-10">
            <%= form.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
          </div>
        </div>

        <div class="mb-3 row">
          <%= form.label :description, class: "col-form-label col-2 text-white" %>
          <div class="col-10">
            <%= form.text_area :description, rows: 10, class: "form-control  shadow rounded", placeholder: "Description of article" %>
          </div>
        </div>
        <div class="mb-3 text-center">
          <%= form.submit class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>

    <%= link_to "[ Cancel and return to articles listing ]", articles_path, class: "text-center text-info mb-3" %>
  </div>
</div>